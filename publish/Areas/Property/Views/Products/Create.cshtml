@model Eid_AL_Kuwait.ViewModel.ProductViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Property/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-5">
                            <div class="mb-2">
                                @Html.LabelFor(model => model.Product.ProductName, htmlAttributes: new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Product.ProductName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Product.ProductName, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-2">
                                @Html.LabelFor(model => model.Product.BrandId, htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.Product.BrandId, new SelectList(Model.Brands, "BrandId", "BrandName"), "Select The Brand", new Dictionary<string, object> { { "class", "form-control" }, { "style", "-webkit-appearance:menulist" } })
                                @Html.ValidationMessageFor(model => model.Product.BrandId, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-2">
                                @Html.LabelFor(model => model.Product.UnitId, htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.Product.UnitId, new SelectList(Model.Units, "UnitId", "UnitName"), "Select The Unit", new Dictionary<string, object> { { "class", "form-control" }, { "style", "-webkit-appearance:menulist" } })
                                @Html.ValidationMessageFor(model => model.Product.UnitId, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-2">
                                @Html.LabelFor(model => model.Product.ImageFileContent, htmlAttributes: new { @class = "form-label" })
                                <input class="form-control" type="file" id="imgFile" name="imgFile">
                                @Html.ValidationMessageFor(model => model.Product.ImageFileContent, "", new { @class = "text-danger" })
                            </div>
                            <div class="row mt-3 p-3" >
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-primary me-5">Create</button>
                                    <span>@Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-outline-secondary" })</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 offset-1 ">
                            <div class="mb-2">
                                @Html.LabelFor(model => model.Product.ProductDescription, htmlAttributes: new { @class = "form-label" })
                                @Html.TextAreaFor(model => model.Product.ProductDescription, new { @class = "form-control", rows = "20" })
                                @Html.ValidationMessageFor(model => model.Product.ProductDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

