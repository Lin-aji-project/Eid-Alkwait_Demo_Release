@model IEnumerable<Eid_AL_Kuwait.Areas.Property.Data.Products.ProductImage>

<div class="mt-3 row" style="overflow-y: scroll; max-height: 450px">
    @foreach (var image in Model)
    {
        var imgsrc = String.Format("data:image/gif;base64,{0}", (image.ImageFileContent != null ? image.ImageFileContent : " "));
    <div class="mt-3 col-4 " style="position:relative">
        <img style="height: 150px; width:150px;" src="@imgsrc"
             class="img-thumbnail" alt="..." />
        @Ajax.ActionLink("X", "Delete", "Images", new { id = image.Id }, new AjaxOptions
        {
            HttpMethod = "POST",
            OnSuccess = "window.location.reload()"@*,Confirm = "Are you sure you want to delete ?"*@,
            UpdateTargetId = "ImgList"
            }, new { @class = "remove-image" })
    </div>
    }
</div>

